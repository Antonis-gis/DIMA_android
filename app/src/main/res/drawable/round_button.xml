<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#add8e6" />
            <gradient android:angle="-90" android:startColor="#345953" android:endColor="#d4ebf2"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#add8e6" />
            <solid android:color="#72bcd4"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#add8e6" />
            <gradient android:angle="-90" android:startColor="#99cfe0" android:endColor="#72bcd4" />
        </shape>
    </item>
</selector>